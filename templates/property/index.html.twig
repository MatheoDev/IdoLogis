{% extends 'base.html.twig' %}

{% block title 'Liste des biens' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1 class="mb-4">Voir toutes nos Ventes</h1>
            {{ form_start(form) }}
                <div class="row align-items">
                    <div class="col-3">{{ form_row(form.maxPrice) }}</div>
                    <div class="col-3">{{ form_row(form.minSurface) }}</div>
                    <div class="col-3">{{ form_row(form.options) }}</div>
                    <div class="col-3"><button class="btn btn-primary">Rechercher</button></div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
            {% for property in properties %}
                <div class="col-md-4">
                    {% include 'property/_property.html.twig' %}
                </div>
            {% endfor %}
        </div>

        <div class="pagination">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>
{% endblock %}
